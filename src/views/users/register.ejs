<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {title : 'Registro de usuario' }) %>

  <body class="register">
    <%- include('../partials/header') %>
      <main class="container">
        <div class="row ">

          <div class="col-12 col-lg-8 mx-auto my-4">
          <div class="card">
            <div class="card-body">
            
                <h1 class="">Registrarse</h1>
                <hr>
              
                <h4 class="h4_register">Ingrese sus datos.</h4>
                <form action="/users/register" class="row" id="form_register" enctype="multipart/form-data"
                  method="POST">
                  <div class="col-12 col-md-6 mb-3">
                    <input class="form_register" id="firstName" type="text" name="firstName" placeholder="Nombre"
                      value="<%= locals.old && old.firstName %>">
                    <small class="errors" id="errorFirstName">
                      <%= locals.errors && errors.firstName ? errors.firstName.msg : null %>
                    </small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <input class="form_register" id="lastName" type="text" name="lastName" placeholder="Apellido"
                      value="<%= locals.old && old.lastName %>">
                    <small class="errors" id="errorLastName">
                      <%= locals.errors && errors.lastName ? errors.lastName.msg : null %>
                    </small>
                  </div>
                 <!--  <div class="col-12 col-md-6 mb-3">
                    <input class="form_register" type="number" id="dni" name="dni" placeholder="DNI" value="<%= locals.old && old.dni %>">
                    <small class="errors" id="errorDNI">
                      <%= locals.errors && errors.dni ? errors.dni.msg : null %>
                    </small>
                  </div> -->
                  <!-- <div class="col-12 col-md-6 mb-3">
                    <input type="tel" name="celular" placeholder="Celular">
                    </div> -->
                  <div class="col-12 col-md-6 mb-3">
                    <input class="form_register" id="email" type="email" name="email" placeholder="Email" value="<%= locals.old && old.email %>">
                    <small class="errors" id="errorEmail">
                      <%= locals.errors && errors.email ? errors.email.msg : null %>
                    </small>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <div class="position-relative">
                      <input class="form_register" id="password" type="password" name="password" placeholder="Contraseña"
                      value="<%= locals.old && old.password %>">
                      <span style="cursor: pointer; position: absolute; top:2px; right: 10px;" ><i
                        class="fa-solid fa-eye-slash"></i></span>
                    </div>
                    
                    <small class="errors" id="errorPassword">
                      <%= locals.errors && errors.password ? errors.password.msg : null %>
                    </small>
                  
                    <ul id="msgPass" hidden>
                      <li id="mayu">Una mayúscula</li>
                      <li id="minu">Un minúscula</li>
                      <li id="num">Un número</li>
                      <li id="esp">Un caracter especial ($@$!%*?&)</li>
                      <li id="min">Mínimo 5 caracteres</li>
                      <li id="max">Máximo 10 caracteres</li>
                    </ul>
                  </div>
                  <div class="col-12 col-md-6 mb-3">
                    <input class="form_register" id="password2" type="password" name="password2" placeholder="Repetir contraseña"
                      value="<%= locals.old && old.password2 %>">
                    <small class="errors" id="errorPassword2">
                      <%= locals.errors && errors.password2 ? errors.password2.msg : null %>
                    </small>
                  </div>
                  <!--<div class="col-12 col-md-6 mb-3">
                    <input class="input_calle" type="text" name="calle" placeholder="Calle">
                      </div>
                     <div class="col-12 col-md-6 mb-3--number">
                    <input type="number" name="number" placeholder="Número">
                    <input type="number" name="piso" placeholder="Piso" >
                    <input type="number" name="cp" placeholder="CP">  
                      </div>
                      <div class="form_register--select">
                      </div> -->
                      <div class="col-12 col-md-6 mb-3">
                        <label class="form_register" style="cursor: pointer;" for="imageAvatar">Imagen de perfil</label>
    
                        <input id="imageAvatar" type="file" name="image" accept=".jpg, .png, .wepb" hidden>
                  </div>
                  <small class="errors" id="errorAvatar"></small>
        
                  <div class="text-center">
                    <button class="btn btn-outline-dark" type="submit">Registrarme</button>
                    
                    
                  </div>
                </form>
                <small class="errors" id="msgErrors" style="display:none; margin-bottom: 15px; text-align: center;">Hay campos
                  con errores o están vacíos</small>
              </div>
            </div>
          </div>
        
        </div>
        

      </main>

      <%- include('../partials/footer') %>

  </body>
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script defer src="/js/validacionRegistro.js"></script>

</html>